#macro(generalQueryFormItemFunc)
  #foreach($item in $queryConfig)
    #if($item.componentType=="input")
    <el-form-item label="${item.desc}" prop="${item.field}">
        <el-input
                v-model.trim="queryParams.${item.field}"
                placeholder="请输入${item.desc}"
                clearable
                class="wi-${item.width}px"
                @keyup.enter="handleQuery"
        />
    </el-form-item>
    #elseif($item.componentType=="enum")
    <el-form-item label="${item.desc}" prop="${item.field}">
        <el-select v-model="queryParams.${item.field}" placeholder="请选择${item.desc}" clearable
                   class="wi-${item.width}px">
            <el-option v-for="dict in ${item.enumKey}" :key="dict.value" :label="dict.label" :value="dict.value"/>
        </el-select>
    </el-form-item>
    #elseif($item.componentType=="selectApi")
    <el-form-item label="${item.desc}" prop="${item.field}">
        <el-select clearable filterable v-model.trim="searchFormMixin.${item.field}"
                   placeholder="请选择${item.desc}">
            <el-option v-for="item in ${item.field}Data" :key="item.${item.valueKey}"
                       :label="item.${item.labelKey}"
                       :value="item.${item.valueKey}"/>
        </el-select>
    </el-form-item>
    #elseif($item.componentType=="date")
    <el-form-item label="${item.desc}" prop="${item.field}">
        <el-date-picker
                v-model.trim="searchFormMixin.${item.field}"
                type="date"
                format="yyyy-MM-dd"
                value-format="yyyy-MM-dd HH:mm:ss"
                placeholder="请选择${item.desc}"/>
    </el-form-item>
    #elseif($item.componentType=="daterange") ##日期时间选择 dateTimePicker
    <el-form-item label="${item.desc}" style="width: ${item.width}px}">
        <el-date-picker
                v-model="${item.field}"
                value-format="YYYY-MM-DD HH:mm:ss"
                type="daterange"
                range-separator="-"
                start-placeholder="开始日期"
                end-placeholder="结束日期"
                :default-time="[new Date(2000, 1, 1, 0, 0, 0), new Date(2000, 1, 1, 23, 59, 59)]"
        />
    </el-form-item>
    #end
  #end
#end
#macro(generalTableColumnFunc)
  #foreach($item in $tableList)
    #if($item.isTemplate)
    <!--${item.desc}-->
      #if($item.componentType=="input")
      <el-table-column
              v-if="item.prop === '${item.field}' && item.isTemplate && item.showColumn"
              :key="item.prop"
              show-overflow-tooltip
              v-bind="item"
              align="center"
              :prop="item.prop"
              :label="item.label"
      >
          <template #default="{ row }">
              <span>{{row.${item.field}}}</span>
          </template>
      </el-table-column>
      #end
      #if($item.componentType=="select")
      <el-table-column
              v-if="item.prop === '$item.field'&&!item.isNotShowCol" :key="item.prop" v-bind="item" align="center"
              :prop="item.prop"
              :label="item.label">
          <template v-slot="{ row }">
                <span class="dot-style"
                      :style="{background: returnColorMixin(row.$item.field,{ 0: '#EC8828', 1: '#45B207', 2: '#A6A6A6'})}"/>
              <span>{{${item.field}Enum(row.${item.field})}}</span>
          </template>
      </el-table-column>
      #end
    #end
  #end
#end
#macro(generalColumnFunc)
  #foreach($item in $tableList)
  { prop: "$item.field", label: "$item.desc", minWidth: $item.width,isTemplate:${item.isTemplate}, align: 'center', showColumn: true  },
  #end
#end
#macro(generalQueryFormKey)
  #foreach($item in $queryConfig)
    #if($item.componentType=="daterange")
      ${item.beginTimeKey}:"", //${item.desc}开始时间
      ${item.endTimeKey}:"",  //${item.desc}结束时间
    #else
      $item.field:"",//${item.desc}
    #end
  #end
#end
#macro(generalEnumKey)
  #set($apiString="")
  #foreach($item in $queryConfig)
    #if($item.componentType.indexOf("enum")!=-1)
      #set($apiString=$apiString+"${item.enumKey},")
    #end
  #end
  $apiString
#end
#macro(generalEnumString)
  #set($apiString="")
  #foreach($item in $queryConfig)
    #if($item.componentType.indexOf("enum")!=-1)
      #set($apiString=$apiString+"'${item.enumKey}',")
    #end
  #end
  $apiString
#end
